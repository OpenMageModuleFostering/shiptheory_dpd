<?xml version="1.0"?>
<config>
	<modules>
		<Shiptheory_Dpd>
			<version>0.0.1</version>
		</Shiptheory_Dpd>
	</modules>
	<global>
		<models>
			<dpd>
				<class>Shiptheory_Dpd_Model</class>
			</dpd>
		</models>
		<helpers>
			<dpd>
				<class>Shiptheory_Dpd_Helper</class>
			</dpd>
		</helpers>
		<blocks>
			<dpd>
				<class>Shiptheory_Dpd_Block</class>
			</dpd>
		</blocks>
	</global>
	<admin>
		<routers>
			<dpd>
				<use>admin</use>
				<args>
					<module>Shiptheory_Dpd</module>
					<frontName>dpd</frontName>
				</args>
			</dpd>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<shiptheory>
					<file>shiptheory.xml</file>
				</shiptheory>
			</updates>
		</layout>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<dpd translate="title" module="dpd">
											<title>Dpd Setup</title>
											<sort_order>20</sort_order>
										</dpd>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
</config>
